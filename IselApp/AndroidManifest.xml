<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iselapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <permission android:name="com.example.iselappserver.ACCESS" />

    <uses-permission android:name="com.example.iselappserver.ACCESS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="classesActivities.SettingsActivity"/>
        <activity android:name="participantsActivities.ParticipantsActivity"/>
        <activity android:name="participantsActivities.ParticipantItemActivity"/>
        <activity
            android:name="newsActivities.MainActivity"
            android:label="@string/app_name"
            android:icon="@drawable/news" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="newsActivities.NewsItemActivity"
            	  android:icon="@drawable/news" 
            	  />
        <service
            android:name="services.IselAppService"
            android:enabled="true" />
    </application>

</manifest>
